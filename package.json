{
    
  "name": "jobportal-fullstack",
  "version": "1.0.0",
  "description": "Full-stack job portal application",
  "type": "module",
  "main": "backend/src/index.js",
  "scripts": {
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm install --include=dev && npm run build",
    "build:backend": "echo 'Backend is ready'",
    "start": "cd backend && npm install && npm start",
    "heroku-postbuild": "npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
